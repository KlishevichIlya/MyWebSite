<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/MyStyleSheet.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="/Home/Index">Блог</a>
            <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarCollapse" aria-label="Toggle navigation" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Phones/Index">Статьи<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Partners">Наши партнеры</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link " href="/Account/Register">Регистрация</a>
                        </li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link " href="/Account/Login">Войти</a>
                        </li>
                    }

                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item active">
                            <a class="nav-link " href="/Users/Index">Пользователи</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="/Roles/Index">Роли</a>
                        </li>
                    }


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link " asp-controller="Account" asp-action="Index">Выйти</a>
                        </li>
                    }



                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <font color="white">@await Component.InvokeAsync("Timer")</font> 
                </form>
            </div>
            <p>

            </p>
        </nav>
    </header>
    <div class="container mt-5">
        <div>
            @RenderBody()
        </div>
    </div>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
